@model MonNgonTaiNha.Models.DANHMUC

@using (Html.BeginForm(new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="iq-card">
        <div class="iq-card-header d-flex justify-content-between">
            <div class="iq-header-title">
                <h4 class="card-title">Add</h4>
            </div>
        </div>
        <div class="iq-card-body">
            <form>
                <div class="form-group">
                    <label for="exampleInputPlaceholder">@Html.LabelFor(model => model.tenDanhMuc, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                    @Html.EditorFor(model => model.tenDanhMuc, new { htmlAttributes = new { @class = "form-control", placeholder = "nhập tên danh mục" } })
                    @Html.ValidationMessageFor(model => model.tenDanhMuc, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPlaceholder">@Html.LabelFor(model => model.moTa, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                    @Html.EditorFor(model => model.moTa, new { htmlAttributes = new { @class = "form-control", placeholder = "Mô tả danh mục" } })
                    @Html.ValidationMessageFor(model => model.moTa, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPlaceholder">@Html.LabelFor(model => model.anh, htmlAttributes: new { @class = "control-label col-md-2" }, HttpPostedFileBase fileAnh)</label>
                    @*<label for="exampleFormControlFile1">Chọn Ảnh</label>*@
                    @Html.TextBox("DuongDan", "", new { Type = "file" })
                    @*<input type="file" class="form-control-file" id="uploadhinh" accept="images/*">*@
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="submit" class="btn iq-bg-danger">@Html.ActionLink("Back", "QuanLyDanhMuc")</button>
            </form>
        </div>
    </div>
}
